@model AssetManagementSystemUI.AssetViewModel

@{
    ViewData["Title"] = "Display Asset Request";
    Layout = "~/Views/Shared/_otherLayout.cshtml";
}

<h6>Give a reason for declining this request?</h6>
<div>
    <hr />

    <form asp-action="DeclineRequest" method="post">
    <dl class="row">
        <dd>
            @Html.HiddenFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AssetName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AssetName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AssignedAsset)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AssignedAsset)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateOfReturn)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateOfReturn)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserEmail)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserEmail)
        </dd>
        <div class="form-group">
            @Html.LabelFor(x => x.Reason, htmlAttributes: new { @class = "control-label required" })
            <input asp-for="Reason" class="form-control" type="text" />
            <span asp-validation-for="Reason" class="text-danger"></span>
        </div>
    </dl>
    
        <input type="submit" value="Confirm" class="btn btn-danger" />
    </form>
</div>
