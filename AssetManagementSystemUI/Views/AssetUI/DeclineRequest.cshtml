@model AssetManagementSystemUI.AssetViewModel

@{
    ViewData["Title"] = "DeclineRequest";
}

<h1>DeclineRequest</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>AssetViewModel</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AssetName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AssetName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AssignedAsset)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AssignedAsset)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.user.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.user.FirstName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @Status.Decline.ToString();
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateOfReturn)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateOfReturn)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Reason)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Reason)
        </dd>
        <div class="form-group">
            @Html.LabelFor(x => x.Reason, htmlAttributes: new { @class = "control-label" })
                <input asp-for="Reason" class="form-control" type="text" />
                <span asp-validation-for="Reason" class="text-danger"></span>
        </div>
    </dl>
    
    <form asp-action="DeclineRequest">
        <input type="submit" value="Confirm" class="btn btn-danger" />
    </form>
</div>
